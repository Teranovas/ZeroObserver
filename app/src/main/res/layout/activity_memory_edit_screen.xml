<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_memory_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_memory_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memory Events"
        android:textStyle="bold"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/list_memory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/input_memory_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit selected memory..."
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_save_memory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Memory"
        android:visibility="gone" />
</LinearLayout>